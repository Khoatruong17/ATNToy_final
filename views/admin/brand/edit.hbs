<div class="container mt-4">
   <a class="btn btn-secondary mb-2" onclick="return confirm('You want to exit without saving?')" href="/brand">Back to
      List</a>

   <form class="mb-3" action="/brand/edit/{{ brand._id }}" method="post">
      <h1 class="mb-4">Edit Toy</h1>

      <div class="mb-3">
         <label for="name" class="form-label">Brand name:</label>
         <input type="text" class="form-control" name="name" id="name" value="{{ brand.name }}" required>
      </div>

      <div class="mb-3">
         <label for="image" class="form-label">Brand Image:</label>
         <input type="url" class="form-control" name="image" id="image" value="{{ brand.image }}" required>
      </div>

      <div class="mb-3">
         <label for="country" class="form-label">Brand country:</label>
         <input type="text" class="form-control" name="country" id="country" value="{{ brand.country }}" required>
      </div>

      <div class="mb-3">
         <label for="since" class="form-label">Brand year:</label>
         <input type="text" class="form-control" name="since" id="since" value="{{ brand.since }}" required>
      </div>

      <button type="submit" class="btn btn-primary">Edit</button>
   </form>
</div>