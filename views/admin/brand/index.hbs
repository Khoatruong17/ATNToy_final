<div class="container mt-4">
    <a class="btn btn-link" href="/toy">List of Toys</a>

    <h2>List of Brands</h2>
    <a class="btn btn-primary mb-2" href="/brand/add">Add new brand</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Image</th>
                <th>Since</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each brands }}
            <tr>
                <td>{{ name }}</td>
                <td>{{ country }}</td>
                <td>
                    <img src="{{ image }}" alt="" width="100" height="120">
                </td>
                <td>{{ since }}</td>
                <td>
                    <a class="btn btn-warning" href="/brand/edit/{{_id}}">Edit</a>
                    <a class="btn btn-danger" href="/brand/delete/{{_id}}"
                        onclick="return confirm('Are you sure you want to delete this brand?')">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>