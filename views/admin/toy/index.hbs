<div class="container mt-4">
   <a class="btn btn-link" href="/brand">List of Brands</a>
   <h2>List of Toys</h2>
   <a class="btn btn-primary mb-2" href="/toy/add">Add new toy</a>

   <table class="table table-bordered">
      <thead>
         <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Image</th>
            <th>Detail</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
         {{#each toys }}
         <tr>
            <td>{{ name }}</td>
            <td>{{ brand.name }}</td>
            <td>${{ price }}</td>
            <td>
               <img src="{{ image }}" alt="" width="100" height="120">
            </td>
            <td>{{ detail }}</td>
            <td>
               <a class="btn btn-warning" href="/toy/edit/{{_id}}">Edit</a>
               <a class="btn btn-danger" href="/toy/delete/{{_id}}"
                  onclick="return confirm('Are you sure you want to delete this toy?')">Delete</a>
            </td>
         </tr>
         {{/each}}
      </tbody>
   </table>
</div>